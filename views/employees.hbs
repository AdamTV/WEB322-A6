<div class="row">
    <div class="col-md-12">
        <h2>Employees</h2>
        <hr />
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Employee Num</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Manager ID</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th>Hired On</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                    <tr>
                        <td>{{employeeNum}}</td>
                        <td><a href="/employee/{{employeeNum}}">{{firstName}} {{lastName}}</a></td>
                        <td><a href="mailto:{{email}}">{{email}}</a></td>
                        <td> {{addressStreet}} {{addressCity}} {{NY}} {{addressPostal}}</td>
                        <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
                        {{#equal status "Full Time"}}
                        <td><a href="/employees?status=Full Time">Full Time</a></td>
                        {{/equal}}
                        {{#equal status "Part Time"}}
                        <td><a href="/employees?status=Part Time">Part Time</a></td>
                        {{/equal}}
                        <td><a href="/employees?department={{department}}">{{department}}</a></td>
                        <td>{{hireDate}}</td>

                    </tr>
                    {{/each}}
        </div>
    </div>
    {{#unless employees}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}