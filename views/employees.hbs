<div class="row">
    <div class="col-md-12">
        <h2>Employees<a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Employee&nbsp;Num</th>
                        <th>Full&nbsp;Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Manager&nbsp;ID</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th>Hired&nbsp;On&nbsp;&nbsp;&nbsp;&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                    <tr>
                        <td>{{empNum}}</td>
                        <td><a href="/employee/{{empNum}}">{{firstName}}&nbsp;{{lastName}}</a></td>
                        <td><a href="mailto:{{email}}">{{email}}</a></td>
                        <td>{{addressStreet}} {{addressCity}}&nbsp;{{addressState}}&nbsp;{{addressPostal}}</td>
                        <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
                        {{#equal status "Full Time"}}
                        <td><a href="/employees?status=Full Time">Full&nbsp;Time</a></td>
                        {{/equal}}
                        {{#equal status "Part Time"}}
                        <td><a href="/employees?status=Part Time">Part&nbsp;Time</a></td>
                        {{/equal}}
                        {{#unless status}}
                        <td>&nbsp;</td>
                        {{/unless}}
                        <td><a href="/employees?department={{department}}">{{department}}</a></td>
                        <td>{{hireDate}}</td>
                        <td><a href="/employees/delete/{{empNum}}" id="remove" class="btn btn-danger">REMOVE</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless employees}}
    <div class="col-md-12 text-center">
        <strong style="color:white">{{message}}</strong>
    </div>
    {{/unless}}
</div>